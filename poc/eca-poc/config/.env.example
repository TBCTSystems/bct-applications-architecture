# Environment file for Certificate Renewal Service
# Copy this file to .env and customize the values

# Step CA Configuration
CERT_RENEWAL_STEP_CA__PROTOCOL=JWK  # Options: JWK, EST

# Common settings
CERT_RENEWAL_STEP_CA__CA_URL=https://your-step-ca-server:9000
CERT_RENEWAL_STEP_CA__CA_FINGERPRINT=your-ca-root-certificate-fingerprint

# JWK Provisioner settings (when protocol = JWK)
CERT_RENEWAL_STEP_CA__PROVISIONER_NAME=your-provisioner-name
CERT_RENEWAL_STEP_CA__PROVISIONER_PASSWORD=your-provisioner-password

# EST settings (when protocol = EST)
# CERT_RENEWAL_STEP_CA__EST_USERNAME=est-user
# CERT_RENEWAL_STEP_CA__EST_PASSWORD=est-password
# CERT_RENEWAL_STEP_CA__EST_CLIENT_CERT=certs/est-client.crt
# CERT_RENEWAL_STEP_CA__EST_CLIENT_KEY=certs/est-client.key

# CRL (Certificate Revocation List) settings
CERT_RENEWAL_STEP_CA__CRL_ENABLED=true
# CERT_RENEWAL_STEP_CA__CRL_URLS=["http://ca.example.com/crl/ca.crl"]
# CERT_RENEWAL_STEP_CA__CRL_REFRESH_HOURS=24

# Service Configuration
CERT_RENEWAL_CHECK_INTERVAL_MINUTES=30
CERT_RENEWAL_LOG_LEVEL=INFO

# Renewal Threshold Configuration
CERT_RENEWAL_DEFAULT_RENEWAL_THRESHOLD_DAYS=30
CERT_RENEWAL_EMERGENCY_RENEWAL_THRESHOLD_DAYS=7
CERT_RENEWAL_WARNING_THRESHOLD_DAYS=14

# Optional: Override certificate paths
# CERT_RENEWAL_CERT_STORAGE_PATH=/opt/certs
# CERT_RENEWAL_LOG_FILE=/var/log/cert_renewal.log