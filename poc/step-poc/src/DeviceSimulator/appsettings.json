{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "DeviceSimulator": {
    "DeviceId": "centrifuge-001",
    "TelemetryIntervalSeconds": 10,
    "StatusIntervalMinutes": 1,
    "ConnectionRetryIntervalSeconds": 30
  },
  "Mqtt": {
    "BrokerHost": "mosquitto",
    "BrokerPort": 8883,
    "UseTls": true,
    "ClientId": "centrifuge-001"
  },
  "Certificates": {
    "CertPath": "/certs/cert.pem",
    "KeyPath": "/certs/privkey.pem",
    "CaPath": "/ca-certs/root_ca.crt"
  }
}